{
  "extends": "@pager/eslint-config-ts/tsconfig.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2022"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
  },
  "reflection": true,
  "include": [
    "src/**/*"
  ]
}
